<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-static-top">
  <div class="container">
    <div class="navbar-header">
      <span class="header_title">Bookers</span>
    </div>

    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to root_path, class:"my-bt" do %>
        <i class="glyphicon glyphicon-home"></i>　Home</li><% end %>
      <li><%= link_to home_about_path, class:"my-bt" do %>
          <i class="glyphicon glyphicon-link"></i>　About</li><% end %>
      <li><%= link_to new_user_session_path, class:"my-bt" do %>
        <i class="glyphicon glyphicon-user"></i>　Sign in</li><% end %>
      <li><%= link_to new_user_registration_path, class:"my-bt" do %>
        <i class="glyphicon glyphicon-log-in"></i>　Log in</li><% end %>
    </ul>
  </div>
</nav>
<%= yield %>
  </body>
</html>
