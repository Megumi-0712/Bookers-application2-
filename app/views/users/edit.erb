<div class="container">
	<div class="row content">
		<div class="col-sm-3 sidenav">
			<h2>User info</h2>

			<% if @user.errors.any? %>
			<p>error</p>
					<% @user.errors.full_messages.each do |message| %>
					<%= message %>
					<% end %>
			<% end %>

			<%= form_for(@user) do |f| %>

			<%= f.label :name %>
			<% f.text_field :name %>

			<%= f.label :Image %>
			<%= f.attachment_field :profile_image %>

			<%= f.label :introduction %>
			<%= f.text_area :introduction %>

			<%= f.submit 'Update User' %>
			<% end %>

		</div>
	</div>
</div>