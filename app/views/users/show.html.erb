<h2>User info</h2>

<div class="container-fluid">
  <div class="row content">
	<div class="col-sm-3 sidenav">
	<h2>new book</h2>
	<%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>


    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>
</div>

<div class="col-sm-9">
<h2>Books</h2>
	<p>The .table class adds basic styling (light padding and only horizontal dividers) to a table:</p>
	<table class="table">
	<thead>
	  <tr>
		  <th></th>
		  <th>Title</th>
		  <th>Opinion</th>
	  </tr>
	</thead>
	<% @books.each do |book| %>
	<tr>
	<td>
		<%= book.user_id %>
	</td>
	<td>
		<%= book.title %>
	</td>
	<td>
		<%= book.body %>
	</td>
	<td>
		<%= link_to 'edit', edit_user_path %>
		<%= link_to 'destroy', user_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
	</td>
	</tr>
	<% end %>
</tbody>
</table>
</div>
</div>