<h2>User info</h2>

<div class="container-fluid">
	<div class="row content">
		<div class="col-sm-3 sidenav">
			<h2>User info</h2>
				<p>100x100のユーザーアイコン</p>
				<p>name</p>
				<p>introduction</p>
				<%= link_to edit_user_path, class: "btn btn-default btn-block" do %>
				<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
				<% end %>

			<h2>New book</h2>

				<%= form_for(@book,url: '/book') do |f| %>

				<% if @book.errors.any? %>
					<p>error</p>
					<% @book.errors.full_messages.each do |message| %>
					<%= message %>
					<% end %>
				<% end %>

				<h4>title</h4>
				<%= f.text_field :title %>

				<h4>opinion</h4>
				<%= f.text_area :body %>

				<br><%= f.submit 'create Book' %>
			<% end %>
		</div>

		<div class="col-sm-9">
			<h2>Books</h2>
			<table class="table">
			<thead>
				<tr>
					<th>Title</th>
					<th>opinion</th>
				</tr>
			</thead>
			<tbody>
			<% @books.each do |book| %>
				<tr>
				<td>
				<%= book.title %>
				</td>
				<td>
				<%= book.body %>
				</td>
				<td>
					<%= link_to 'Edit', edit_book_path %>
					<% end %>
				</td>
				</tr>
			</tbody>
			</table>
		</div>

		<div class="row">
			<div class="col-sm-4"></div>
			<div class="col-sm-4"></div>
			<div class="col-sm-4">CopyRight Infratop.inc</div>
		</div>
	</div>
</div>