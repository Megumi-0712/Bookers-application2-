<h1><strong>Editing Book</strong></h1>

<% if @book.errors.any? %>
<p>error</p>
	<% @book.errors.full_messages.each do |message| %>
		<%= message %>
	<% end %>
<% end %>

<!-- form_for部分 -->
<%= form_for(@book,url:"/books/#{@book.id}") do |f| %>

	<h3>Title</h3>
	<%= f.text_field :title%>

	<h3>Body</h3>
	<%= f.text_area :body %><br>

	<%= f.submit 'Update Book' %>
<% end %>

